<?xml version="1.0" encoding="utf-8"?>
<!--一篇文章的水平布局，左为图片，右为内容-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_height="100dp">

    <TextView
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:text="Title"
        android:maxLines="2"
        android:textSize="13sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <ImageView
        android:layout_marginTop="3dp"
        android:layout_below="@id/article_title"
        android:id="@+id/article_img"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:maxLines="3"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignBottom="@id/article_img"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/article_title"
        android:layout_toRightOf="@id/article_img"
        android:id="@+id/article_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:text="1条评论"
        android:textSize="10sp"
        android:layout_alignRight="@id/article_desc"
        android:layout_below="@id/article_desc"
        android:id="@+id/article_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="16dp" />


</RelativeLayout>